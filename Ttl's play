# Turtle-sGame
Jogo da tartaruga9sosia do jogo da cobrinha do nokia
# Autoria Emilly M.
import random
import turtle
import time


# setup do jogo
win = turtle.Screen()
win.title("Turtle's game")
win.bgcolor("black")
win.setup(width=600, height=600)
win.tracer(0)


# nascimento da tartaruga :)
head = turtle.Turtle()
head.speed(0)
head.shape("turtle")
head.color("green")
head.penup()
head.goto(0, 100)



# Loop da bebe
while True:
    win.update()


    # come√ßo do jogo
    def move():
        if head.direction == "up":
            y: float = head.ycor()
            head.sety(y + 20)
            if head.direction == "down":
                y: float = head.ycor()
                head.sety(y - 20)
                if head.direction == "right":
                    x: float = head.xcor()
                    head.sety(x + 20)
                    if head.direction == "left":
                        x: float = head.xcor()
                        head.setx(x - 20)
                        
                        while True:
                                                    win.update()
                                                    
import time 

delay = 0.1
# outro loop para variar

while True:
    wn.update()
    move()
    time.sleep(delay)


    def go_up():
        if head.direction != 'down':
           return
        head.direction = 'up'


def go_down():
    if head.direction != 'up':
        return
        head.direction = 'down'


def go_right():
    if head.direction != 'left':
        return
    head.direction = 'right'


def go_left():
    if head.direction != 'right':
        return
    head.direction = 'left'

# controle do teclado

win.listen()
win.onkey(go_up, "a")
win.onkey(go_down, "w")
win.onkey(go_right, "s")
win.onkey(go_left, "a")

#comidinha

food = turtle.Turtle()
food.speed(0)
food.shape("circle")
food.color("blue")
food.penup()
food.shapesize(0.50, 0.50)
food.goto(0, 0)

if head.distance(food) <15:
    x = random.randint(-290, 290)
    y = random.randint(-290, 290)
    food.goto(x, y)

